<%- include("../partials/header.ejs") %>

<div class="container">
    <h1 class="display-4 text-center my-4">Add a Comment to <%= campground.name %> </h1>
    <form action="/campgrounds/<%= campground._id %>/comments " method="POST">
        <div class="form-group mx-auto" style="max-width: 400px;">
            <input class="form-control" type="text" placeholder="Text" name="comment[text]">
        </div>
        <div class="form-group mx-auto" style="max-width: 400px;">
            <button class="btn btn-lg btn-dark btn-block" type="submit">Submit</button>
        </div>
    </form>
    <a class="text-center w-100 d-inline-block mt-3" href="/campgrounds">Go Back</a>
</div>

<%- include("../partials/footer.ejs") %>