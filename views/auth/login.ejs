<%- include("../partials/header.ejs") %>

<div class="container">
    <h1 class="display-4 text-center my-4">Login</h1>
    <form action="/login" method="POST">
        <div class="form-group mx-auto" style="max-width: 400px;">
            <input class="form-control" type="text" placeholder="Username" name="username">
        </div>
        <div class="form-group mx-auto" style="max-width: 400px;">
            <input class="form-control" type="password" placeholder="Password" name="password">
        </div>
        <div class="form-group mx-auto" style="max-width: 400px;">
            <button class="btn btn-lg btn-dark btn-block" type="submit">Login</button>
        </div>
    </form>
    <a class="text-center w-100 d-inline-block mt-3" href="/">Go Back</a>
</div>

<%- include("../partials/footer.ejs") %>