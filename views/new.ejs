<%- include("partials/header.ejs") %>

<div class="container">
    <h1 class="display-4 text-center my-4">Create a New Campground</h1>
    <form action="/campgrounds" method="POST">
        <div class="form-group mx-auto" style="max-width: 400px;">
            <input class="form-control" type="text" placeholder="Name" name="name">
        </div>
        <div class="form-group mx-auto" style="max-width: 400px;">
            <input class="form-control" type="text" placeholder="Image URL" name="image">
        </div>
        <div class="form-group mx-auto" style="max-width: 400px;">
            <textarea class="form-control" placeholder="Description" name="description" rows="5"></textarea>
        </div>
        <div class="form-group mx-auto" style="max-width: 400px;">
            <button class="btn btn-lg btn-dark btn-block" type="submit">Submit</button>
        </div>
    </form>
    <a class="text-center w-100 d-inline-block mt-3" href="/campgrounds">Go Back</a>
</div>

<%- include("partials/footer.ejs") %>